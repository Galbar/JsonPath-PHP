{
    "name": "galbar/jsonpath",
    "description": "JSONPath implementation for querying and updating JSON objects",
    "type": "library",
    "keywords": ["jsonpath", "json", "path"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Alessio Linares",
            "email": "alessio@alessio.cc"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "sami/sami": ">=3.3.0",
        "blackfire/php-sdk": "~1.31.0"
    },
    "autoload": {
        "psr-4": {
            "Galbar\\JsonPath\\": "src/Galbar/JsonPath",
            "Galbar\\Utilities\\": "src/Galbar/Utilities"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/Galbar/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-text"
    }
}
